{
    "title": "Akka HTTP 中文文档",
    "author": "Kyle Song <satansk@hotmail.com>",
    "output.name": "site",
    "language": "zh-hans",
    "gitbook": "3.2.2",
    "root": ".",
    "links": {
        "sidebar": {
            "Home": "https://www.github.com/satansk"
        }
    },
    "styles": {
      "website": "styles/website.css"
    },
    "plugins": [
        "-lunr", "-search", "-highlight", "-livereload", "search-plus@^0.0.11",
        "simple-page-toc@^0.1.1",
        "github@^2.0.0", "github-buttons@2.1.0", "anchors@^0.7.1",
        "edit-link@^2.0.2", "theme-comscore",
        "prism@^2.1.0",
        "advanced-emoji@^0.2.1",
        "ace@^0.3.2",
        "emphasize@^1.1.0",
        "splitter@^0.0.8",
        "mermaid@^0.0.9",
        "tbfed-pagefooter@^0.0.1",
        "expandable-chapters-small@^0.1.7",
        "sectionx@^3.1.0",
        "sitemap-general@^0.1.1",
        "anchor-navigation-ex@0.1.8",
        "todo@^0.1.3"
    ],
    "pluginsConfig": {
        "theme-default": {
            "showLevel": true
        },
        "prism": {
            "css": [
                "prismjs/themes/prism-solarizedlight.css"
            ]
        },
        "prism": {
            "lang": {
                "flow": "scala"
            }
        },
        "github": {
            "url": "https://github.com/satansk/akka-http-docs"
        },
        "github-buttons": {
            "repo": "satansk/akka-http-docs",
            "types": [
                "star"
            ],
            "size": "small"
        },
        "tbfed-pagefooter": {
            "copyright": "Copyright © satansk.com 2017",
            "modify_label": "该文件修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "simple-page-toc": {
            "maxDepth": 3,
            "skipFirstH1": true
        },
        "edit-link": {
            "base": "https://github.com/satansk/akka-http-docs/edit/master",
            "label": "Edit"
        },
        "sitemap-general": {
            "prefix": "http://gitbook.zhangjikai.com"
        },
        "anchor-navigation-ex": {
            "isRewritePageTitle": false,
            "tocLevel1Icon": "fa fa-hand-o-right",
            "tocLevel2Icon": "fa fa-hand-o-right",
            "tocLevel3Icon": "fa fa-hand-o-right"
        },
        "sectionx": {
            "tag": "b"
        }
    }
}
